<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plantynet.warning.sql.serverListMapper">

	<resultMap id="serverVO" type="com.plantynet.warning.vo.ServerVO">
        <result property="serverId" column="server_id" javaType="int"/>
        <result property="teamId" column="team_id" javaType="int"/>
        <result property="serverNm" column="server_nm" javaType="String"/>
        <result property="ip" column="ip" javaType="String"/>
        <result property="sttus" column="sttus" javaType="String"/>
        <result property="rgsde" column="rgsde" javaType="java.sql.Timestamp"/>
        <result property="updde" column="updde" javaType="String"/>
    </resultMap>
    
    <select id="getServerList" resultMap="serverVO">
		select * from SERVER where sttus = "ACT01" and team_id = #{teamId}
	</select>

	<select id="getServerListByIp" resultMap="serverVO">
		select * from SERVER where ip = #{ip} and sttus = "ACT01" and team_id = #{teamId}
	</select>
	
	<select id= "getServerListByServerNm" resultMap="serverVO">
		select * from SERVER where server_nm = #{serverNm} and sttus = "ACT01" and team_id = #{teamId}
	</select>
	
	<insert id= "addServer">
		insert into SERVER(team_id,server_nm,ip,sttus) values(#{teamId},#{serverNm},#{ip},"ACT01")
	</insert>
	
	<update id = "deleteServer">
		UPDATE SERVER SET sttus= "ACT02"  WHERE server_id = #{serverId}
	</update>
	
	<update id = "updateServer">
		UPDATE SERVER SET server_nm = #{serverNm}, ip= #{ip}  WHERE server_id = #{serverId}
	</update>
	
	

	
	<!-- 참고용 !!!!
	 
	<insert id="create">
	 insert into tbl_board (title, content, writer) 
	 values(#{title},#{content}, #{writer})
	 </insert>
	
	 <select id="read" resultType="org.zerock.domain.BoardVO">
	 select 
	   bno, title, content, writer, regdate, viewcnt 
	 from 
	   tbl_board 
	 where bno = #{bno}
	 </select>
	
	 <update id="update">
	 update tbl_board set title =#{title}, content =#{content} 
	 where bno = #{bno}
	 </update>
	
	 <delete id="delete">
	 delete from tbl_board where bno = #{bno}
	 </delete>
	
	 <select id="listAll" resultType="org.zerock.domain.BoardVO">
	 <![CDATA[
	 select 
	   bno, title, content, writer, regdate, viewcnt 
	 from 
	   tbl_board 
	 where bno > 0 
	 order by bno desc, regdate desc
	 ]]>  
	 </select>
	 
	 <select id="listPage" resultType="BoardVO">
	 <![CDATA[
	 select 
	   bno, title, content, writer, regdate, viewcnt 
	 from 
	   tbl_board 
	 where bno > 0 
	 order by bno desc, regdate desc
	 limit #{page}, 10
	 ]]>  
	 </select>
	
	  <select id="listCriteria" resultType="BoardVO">
	 <![CDATA[
	 select 
	   bno, title, content, writer, regdate, viewcnt 
	 from 
	   tbl_board 
	 where bno > 0 
	 order by bno desc, regdate desc
	 limit #{pageStart}, #{perPageNum}
	 ]]>  
	 </select>
	
	
	
	 <select id="countPaging" resultType="int">
	 <![CDATA[
	 select 
	   count(bno) 
	 from 
	   tbl_board 
	 where 
	   bno > 0 
	 ]]>
	 </select>
	
	
	
